<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/rvTwitter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="99dp"
                android:layout_height="89dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_person_24" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="116dp"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="parent"
                tools:taxt="tvName"
                tools:text="Nyakuar YIech" />

            <TextView
                android:id="@+id/tvAccName"
                android:layout_width="271dp"
                android:layout_height="74dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:text="Twitter has been one of the most popular social media platforms for years now. With criticisms often made about the site and how it can cause such abusive discourse, canceling of celebrities."
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/tvName" />

            <ImageView
                android:id="@+id/tvReply"
                android:layout_width="47dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAccName"
                app:srcCompat="@drawable/reply" />

            <TextView
                android:id="@+id/tvNUm"
                android:layout_width="47dp"
                android:layout_height="30dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:text="10"
                app:layout_constraintStart_toEndOf="@+id/tvReply"
                app:layout_constraintTop_toTopOf="@+id/tvReply" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="48dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/tvNUm"
                app:layout_constraintTop_toBottomOf="@+id/tvAccName"
                app:srcCompat="@drawable/retwitter" />

            <TextView
                android:id="@+id/tvnum2"
                android:layout_width="41dp"
                android:layout_height="19dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:text="50"
                app:layout_constraintStart_toEndOf="@+id/imageView7"
                app:layout_constraintTop_toTopOf="@+id/imageView7" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="35dp"
                android:layout_height="43dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/tvnum2"
                app:layout_constraintTop_toBottomOf="@+id/tvAccName"
                app:srcCompat="@drawable/love" />

            <TextView
                android:id="@+id/tvNum3"
                android:layout_width="19dp"
                android:layout_height="25dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="24dp"
                android:text="23"
                app:layout_constraintStart_toEndOf="@+id/imageView8"
                app:layout_constraintTop_toTopOf="@+id/imageView8" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="64dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/tvNum3"
                app:layout_constraintTop_toBottomOf="@+id/tvAccName"
                app:srcCompat="@drawable/share" />

            <TextView
                android:id="@+id/tvNum4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="24dp"
                android:text="40"
                app:layout_constraintStart_toEndOf="@+id/imageView9"
                app:layout_constraintTop_toBottomOf="@+id/tvAccName" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>